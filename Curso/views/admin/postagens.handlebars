<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>{{descricao}}</p>
        <p>{{conteudo}}</p>
        <small>{{data}}</small><br>
        <small>{{categoria.nome}}</small>
        <br>
        <a href="/admin/postagens/edit/{{_id}}"> <button type="submit" class="btn btn-success mt-3">Editar Postagem</button> </a>
        <a href="/admin/postagens/deletar/{{_id}}"> <button type="submit" class="btn btn-danger mt-3">Deletar Postagem</button> </a>
    </div>
</div>
{{else}}
<p>Nenhuma postagem registrada.</p>
{{/each}}